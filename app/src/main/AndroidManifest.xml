<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vcarmen.es.academia">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity android:name=".view.activities.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.ActivityCreateAlumno"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name=".view.activities.ActivityUpdateAlumno"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".view.activities.ActivityCreateAsignatura"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".view.activities.ActivityUpdateAsignatura"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".view.activities.ActivityCreateMatricula"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".view.activities.ActivityUpdateMatricula"
            android:configChanges="orientation|screenSize">
        </activity>

    </application>

</manifest>