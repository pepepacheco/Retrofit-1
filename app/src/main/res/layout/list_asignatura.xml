<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_weight="10"
    android:shrinkColumns="*"
    android:stretchColumns="*">
    <TableRow>
        <TextView
            android:layout_span="1"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textAlignment="textEnd"
            android:id="@+id/textViewNombreAsignatura"
            android:text="Nombre: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_span="9"
            android:id="@+id/resultadoNombreAsignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_span="1"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textAlignment="textEnd"
            android:id="@+id/textViewCicloAsignatura"
            android:text="Ciclo: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_span="9"
            android:maxLines="2"
            android:id="@+id/resultadoCicloAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_span="1"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textAlignment="textEnd"
            android:id="@+id/textViewCursoAsignatura"
            android:text="Curso: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_span="9"
            android:id="@+id/resultadoCursoAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_span="1"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textAlignment="textEnd"
            android:id="@+id/textViewHorasAsignatura"
            android:text="Horas: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_span="9"
            android:id="@+id/resultadoHorasAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>

</TableLayout>